                    <strow class="- topic/strow " xtrc="strow:6;94:29" xtrf="file:/C:/Users/Filip/Desktop/-Screenshots-best-practices/Topics/Ho%20to%20create%20a%20perfect%20screenshot/t_how%20to_4_editing.dita"/>
